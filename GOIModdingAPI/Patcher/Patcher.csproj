<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Mono.Cecil" Version="0.10.0" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <ItemGroup>
      <ModAPIFiles Include="$(SolutionDir)ModAPI/bin/$(ConfigurationName)/ModAPI.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(ModAPIFiles)" DestinationFiles="@(ModAPIFiles->'$(TargetDir)\%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>
</Project>